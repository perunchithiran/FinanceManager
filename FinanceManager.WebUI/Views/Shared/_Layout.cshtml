<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success" id="message">@TempData["message"]</div>
    }
    <div class="container">
        <div class="jumbotron">
            <h1>Finance Manager</h1>
            <div>
                @Html.Partial("TopMenu")
            </div>
        </div>
        <div class="row">
            <div id="categories" class="col-md-2">
                @Html.Action("Index", "Navigation", new { controllerName = ViewBag.controllerName })
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>
    <div>
        @Html.Partial("BottomScripts")
    </div>
</body>
</html>